
package Fred ;

require Exporter ;
use DB_File ;
@ISA = qw( DB_File) ;

sub TIEHASH { 
    	print "TIEHASH Fred\n" ; 
	my $pkg = shift ;
	my $db =  DB_File::TIEHASH($pkg, @_) ;
	bless $db, $pkg if $db ;
}

