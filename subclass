package main ;

use Fcntl ;

print "tie'ing\n" ;
tie %x, 'Fred', "/tmp/xyz", O_RDWR|O_CREAT, 0777  or "die cannot tie: $!\n" ;

$x{abc} = 'def' ;

untie %x ;
